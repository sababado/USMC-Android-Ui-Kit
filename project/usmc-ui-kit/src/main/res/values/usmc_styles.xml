<resources>

    <!-- Base application theme. -->
    <style name="USMCTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/usmc_primary</item>
        <!--<item name="colorPrimaryVariant">@color/usmc_primary_dark</item>-->
        <!--<item name="colorOnPrimary">@color/usmc_white</item>-->
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/usmc_primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <!--<item name="colorAccent">@color/usmc_accent</item>-->
        <item name="colorSecondary">@color/usmc_red</item>
        <!--<item name="colorSecondaryVariant">@color/usmc_red_variant_dark</item>-->
        <!--<item name="colorOnSecondary">@color/usmc_white</item>-->


        <item name="colorError">@color/usmc_red_variant_light</item>
        <!--<item name="colorOnError">#85000000</item>-->

        <!--<item name="colorSurface">@color/usmc_blue_lightish</item>-->
        <!--<item name="colorOnSurface">#212121</item>-->

        <item name="android:colorBackground">@color/usmc_window_background</item>
        <!--<item name="colorOnBackground">#212121</item>-->
        <!--<item name="android:windowBackground">@color/usmc_window_background</item>-->


        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="actionBarStyle">@style/USMCTheme.ActionBarStyle</item>
        <item name="toolbarStyle">@style/USMCTheme.ToolBarStyle</item>
        <item name="materialCardViewStyle">@style/USMCTheme.CardView</item>
        <item name="floatingActionButtonStyle">@style/USMCTheme.Widget.FloatingActionButton</item>
    </style>

    <style name="USMCTheme.Flavor" parent="USMCTheme">
        <!-- The following attributes should be customized in each flavor -->
        <item name="primaryButton">@drawable/usmc_primary_button_ripple</item>
        <item name="simpleDropdownSpinnerItemBackground">@drawable/usmc_simple_spinner_dropdown_item_background_ripple
        </item>
    </style>

    <style name="USMCTheme.Flavor.NoActionBar" parent="USMCTheme.Flavor">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="USMCTheme.Flavor.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/usmc_primary</item>
        <item name="colorPrimaryDark">@color/usmc_primary_dark</item>
        <item name="colorSecondary">@color/usmc_red</item>
        <item name="colorError">#ff4f30</item>
        <item name="android:colorBackground">@color/usmc_window_background</item>
        <item name="actionBarStyle">@style/USMCTheme.ActionBarStyle</item>
        <item name="toolbarStyle">@style/USMCTheme.ToolBarStyle</item>
        <item name="materialCardViewStyle">@style/USMCTheme.CardView</item>
        <item name="floatingActionButtonStyle">@style/USMCTheme.Widget.FloatingActionButton</item>
    </style>

    <style name="USMCTheme.Flavor.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/usmc_primary</item>
        <item name="colorPrimaryDark">@color/usmc_primary_dark</item>
        <item name="colorSecondary">@color/usmc_red</item>
        <item name="colorError">#ff4f30</item>
        <item name="android:colorBackground">@color/usmc_window_background</item>
        <item name="actionBarStyle">@style/USMCTheme.ActionBarStyle</item>
        <item name="toolbarStyle">@style/USMCTheme.ToolBarStyle</item>
        <item name="materialCardViewStyle">@style/USMCTheme.CardView</item>
        <item name="floatingActionButtonStyle">@style/USMCTheme.Widget.FloatingActionButton</item>
    </style>

    <style name="USMCTheme.Transparent" parent="USMCTheme.Flavor">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/usmc_black_translucent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="USMCTheme.Transparent.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="USMCTheme.Widget.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="rippleColor">@color/usmc_blue</item>
    </style>

    <style name="USMC.Widget.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="android:background">@color/usmc_blue</item>
        <item name="tabTextAppearance">@style/USMC.TextAppearance.TabTextAppearance</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="android:elevation">@dimen/usmc_action_bar_elevation</item>
        <item name="elevation">@dimen/usmc_action_bar_elevation</item>
    </style>

    <!-- TODO This may need a different text color selector
    Look at:
    <style name="TextAppearance.Design.Tab" parent="TextAppearance.AppCompat.Button">
    -->
    <style name="USMC.TextAppearance.TabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/usmc_silver_pressed</item>
    </style>

    <style name="USMCTheme.ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/usmc_bottom_border_small</item>
        <item name="android:background">@drawable/usmc_bottom_border_small</item>
        <item name="elevation">@dimen/usmc_action_bar_elevation</item>
    </style>

    <style name="USMCTheme.ToolBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@drawable/usmc_bottom_border_small</item>
        <item name="android:background">@drawable/usmc_bottom_border_small</item>
        <item name="elevation">@dimen/usmc_action_bar_elevation</item>
    </style>

    <style name="USMCTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/usmc_blue_lightish</item>
    </style>

    <!--<style name="USMCTheme.Widget.Button" parent="Widget.MaterialComponents.Button">-->
    <!--<item name="backgroundTint">?attr/colorControlHighlight</item>-->
    <!--<item name="android:textColor">@color/usmc_btn_color</item>-->
    <!--</style>-->

    <style name="USMCTheme.TextAppearance.Giant" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textSize">@dimen/text_size_giant</item>
    </style>
    <style name="USMCTheme.TextAppearance.Huge" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>
    <style name="USMCTheme.TextAppearance.Large" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="USMCTheme.TextAppearance.Medium" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="USMCTheme.TextAppearance.Small" parent="@android:style/TextAppearance.Material.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
</resources>
